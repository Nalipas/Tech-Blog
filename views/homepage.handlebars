<!-- Loop over each object in the post array -->
{{#each posts as |post| }}
<div class="card has-background-info mb-5 post columns">
    <div class="section column is two-thirds">
        <h2>
            <a class="post-name is-size-3" href="/post/{{post.id}}">{{post.name}}</a>
        </h2>
        <p>
            {{post.description}}
        </p>
    </div>
    <div class="column is-one-third pt-6">
        <p>Posted by {{post.user.name}} on {{format_date post.date_created}}</p>
    </div>
</div>
{{/each}}